{
  "name": "personal-site",
  "version": "1.1.0",
  "description": "My personal site",
  "main": "dist/index.html",
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^3.4.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "lite-server": "^2.3.0",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5",
    "uglify-js": "^3.0.18"
  },
  "scripts": {
    "dev": "lite-server -c bs-config.json",
    "copy":
      "cp -rf src/assets dist && cp -rf src/assets dist && cp -rf src/fonts dist && cp -f src/css/font-awesome.min.css dist/css",
    "build":
      "mkdir -p dist/js && mkdir -p dist/css && pug src/index.pug src/bonus.pug -o dist/ && uglifyjs src/js/app.js -m -o dist/js/app.min.js && uglifyjs src/js/ui.js -m -o dist/js/ui.min.js && stylus src/css/loader.styl -o dist/css/stylesheet.css && npm run copy",
    "clean": "rm -R dist",
    "watch":
      "concurrently 'stylus -w src/css/loader.styl -o dist/css/stylesheet.css' 'pug -w src/index.pug -o dist/' ",
    "deploy": "dploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimJZhu/Personal-Site.git"
  },
  "author": "Jim J. Zhu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JimJZhu/Personal-Site/issues"
  },
  "homepage": "https://github.com/JimJZhu/Personal-Site#readme"
}
