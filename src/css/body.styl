$keyframe-name = slide-down
@keyframes {slide-down}
    from 
        margin-top 1.5em
    to
        margin-top 0.2em
$keyframe-name = blur
@keyframes {blur}
  for i in 0..3
    {10% * i}
      filter blur(i px)
body
    color text-gray
    background-color text-black

.pure-img-responsive
    max-width 100%
    height auto

.shrink
    @media (min-width: 702px)
        height 14vh !important
    height 20vh !important
    transition: all 0.3s ease-in-out
    h2,p,.social
        display none !important
        opacity 0
    ul
        margin-top -0.5rem
  
.header
    margin-top -8rem
    text-align center
    width 100%
    height 16rem
    // border-bottom 2px solid text-black
    display flex
    flex-direction column
    justify-content center
    background-attachment fixed
    background-size cover 
    background-position center
    background-color rgba(54, 169, 152, 1)
    background-blend-mode multiply
    position fixed
    transition all 0.3s ease-in-out
    z-index 2
    h1
        margin 0.2em 0
        font-size 3em
        font-weight 600
        a
            text-decoration none
            color text-white
    h2
        font-weight 700
        color text-white
        padding 0
        margin 0.5rem 0.5rem
        display inline-block
    .dash
        opacity 0
    @media (min-width: 702px)
        .dash
            opacity 1
    p
        font-size 0.2em
        position fixed
        top 80%
    ul
        border none
        background transparent
        padding-top 0.5rem
        padding-left 0
        a:hover, a:focus
            background aqua-lighters
            color white
        a
            color text-white
            font-size 1.3em
            text-decoration none
            display block

.content
    margin-bottom 0 !important
    transition all .2s ease-in-out
    line-height 1.6em
.social
    color text-white
    &:visited
        color text-white
    &:hover
        color red-main
    &:active
        color text-white
.fab
    a
        border-radius 100%
        border none
        outline none
        position fixed
        bottom 10px
        right 10px
        background-color alpha(aqua-light, 0.8)
        color white
        padding 0.5rem
        text-decoration none
        z-index 100
.spacer
.work-section
    display block
    padding 8rem 2rem 1rem 2rem
    color text-gray
    text-align center
    max-width 750px
    margin 8rem auto -6rem
    h2
        color text-white
    .job-container
        text-align left
        h3
            margin 0
            padding 0
            font-weight 530
            font-size 1.2rem
            color text-gray
        h4
            margin 0
            padding 0
            font-weight 300
            font-size 1rem

.projects-section
    padding 8rem 2rem 1rem 2rem
    color text-gray
    text-align center
    margin-bottom -6rem
    h2
        color text-white
    .project-card
        display inline-block
        box-shadow 0 2px 3px 0 rgba(0, 0, 0, .20)
        position relative
        padding 1rem 2rem
        text-decoration none
        max-width 12rem

        h3
            font-weight 530
            font-size 1.3rem
            color #777777
        p
            color #777777
    .project-card-overlay
        position absolute
        top 0
        left 0
        height 100%
        width 100%
        transition all .3s ease-in-out
        background-color #333
        opacity 0
        color text-white
        display flex
        justify-content center
        flex-direction column
        &:hover
            opacity 0.8
            box-shadow 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23)
    .secret
        box-shadow none
        h3
            color text-black
        &:hover
            h3
                color text-white
                opacity 1
            opacity 0.3
            box-shadow 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23)
.about-section
    padding 8rem 2rem 1rem 2rem
    margin-bottom -6rem
    text-align center
    color text-gray
    max-width 750px
    margin auto
    h2
        color text-white
    .about-container
        display flex
        flex-direction column
        text-align center
        justify-content center
        img
            height 10rem
            width 10rem
            border-radius 100%
            margin 1rem auto
        p
            color text-gray
            margin 0 1.5rem
        a
            text-decoration none
            color text-white
.contact-section
    padding 0.5rem 0rem 1rem 0rem
    margin-bottom 0
    color text-gray
    text-align center
    background-color black
    h2
        color text-white
    p
        text-align center
        margin 0
        padding 0
    .contact-container
        position relative
        transition all .2s ease-in-out
        text-decoration none
        form
            // align-items center
            *
                display block
                margin 0.5rem auto
                max-width: 100%
                width 10rem
            @media (min-width: 415px)
                *
                    display block
                    margin 1rem auto
                    width 15rem
            @media (min-width: 500px)
                *
                    display block
                    margin 1rem auto
                    width 20rem
            button
                background-color background-gray
                padding 0.5rem
                border none
                transition all .2s ease-in-out
                color text-black
                &:hover
                    background-color blue-light
    .contact-container>form>input,
    .contact-container>form>textarea
        background-color background-gray
        resize none
        padding 0.75rem 0.5rem
        border none
        transition all .2s ease-in-out
        color: #111

    .contact-container>form>input:hover,
    .contact-container>form>textarea:hover
        box-shadow 0 0 2px rgba(0, 0, 0, 0.19) inset, 0 2px 3px rgba(0, 0, 0, 0.22) inset
        border none
        background-color blue-light

footer
    margin 0
    padding 1rem 2rem 0.5rem 2rem
    text-align center
    background-color black
    p
        margin 0