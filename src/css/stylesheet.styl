.social
    color #191818
    &:visited
        color #191818
    &:hover
        color #1F8DD6
    &:active
        color #191818

.bonus
    & > a
        color #191818 !important
    .job-container
        margin 0
        padding 0

.job-container
    & > h3
        margin 0
        padding 0
        font-weight 530
        font-size 1.2rem
    & > h4
        margin 0
        padding 0
        font-weight 300
        font-size 1rem

.contact-container
    box-shadow 0 2px 3px 0 rgba(0, 0, 0, .20)
    margin auto
    position relative
    transition all .2s ease-in-out
    padding 2rem
    text-decoration none
    & > form
        padding 1rem
        align-items center
        *
            display block
            margin 1rem auto
            width 20rem
        & > button
            background-color #ddd
            padding 0.5rem
            border none
            transition all .2s ease-in-out
            &:hover
                box-shadow 0 5px 10px rgba(0, 0, 0, 0.19), 0 3px 3px rgba(0, 0, 0, 0.23)

.contact-container>form>input,
.contact-container>form>textarea
    background-color #ddd
    resize none
    padding 0.75rem 0.5rem
    border none
    transition all .2s ease-in-out

.contact-container>form>input:hover,
.contact-container>form>textarea:hover
    box-shadow 0 0 2px rgba(0, 0, 0, 0.19) inset, 0 2px 3px rgba(0, 0, 0, 0.22) inset
    border none

footer
    padding 0 0 0 1rem
    text-align center

.project-card
    display inline-block
    box-shadow 0 2px 3px 0 rgba(0, 0, 0, .20)
    margin auto
    position relative
    transition all .2s ease-in-out
    padding 2rem
    text-decoration none
    &:hover
        box-shadow 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23)
    & > h3
        font-weight 530
        font-size 1.3rem
        color #777777
    & > p
        color #777777